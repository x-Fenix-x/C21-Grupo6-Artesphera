<script>
    const imageTypeDropdown = document.getElementById('image_type');
    const oneImageDiv = document.getElementById('one_image');
    const multipleImagesDiv = document.getElementById('multiple_images');

    imageTypeDropdown.addEventListener('change', function () {
        const selectedOption = imageTypeDropdown.value;

        oneImageDiv.hidden = true;
        multipleImagesDiv.hidden = true;

        if (selectedOption === 'single') {
            oneImageDiv.hidden = false;
        } else if (selectedOption === 'multiple') {
            multipleImagesDiv.hidden = false;
        }
    });
</script>